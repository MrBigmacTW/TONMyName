{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/ton-connect-manifest.json",
      "headers": {
        "content-type": "application/json",
        "access-control-allow-origin": "*",
        "cache-control": "no-cache, no-store, must-revalidate"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 